{
  "name": "Dev Container",
  "dockerFile": "../docker/Dockerfile.dev",
  "workspaceFolder": "/workspace",
  "context": "..",
  "mounts": [
    "source=${localWorkspaceFolder},target=/workspace,type=bind",
    "source=${localEnv:HOME}/.ssh,target=/root/.ssh,type=bind",
    "source=/path/to/local/data,target=/workspace/data,type=bind"
  ],
  "settings": {
    "terminal.integrated.shell.linux": "/bin/bash"
  },
  "extensions": [
    "ms-python.python",
    "ms-azuretools.vscode-docker",
    "GitHub.vscode-pull-request-github",
    "asciidoctor.asciidoctor-vscode",
    "mhutchie.git-graph",
    "njqdev.vscode-python-typehint",
    "VisualStudioExptTeam.vscodeintellicode"
  ],
  "postCreateCommand": "ls -la /workspace/scripts && chmod +x /workspace/scripts/setup_ssh_git.sh && bash /workspace/scripts/setup_ssh_git.sh && git config --global user.name 'Your Name' && git config --global user.email 'your_email@example.com'",
  "remoteUser": "root"
}
